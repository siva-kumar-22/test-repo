pipeline {
    agent any
    options {
        skipDefaultCheckout(true)   // Important to avoid Jenkins auto checkout failing
    }
    environment {
        wish = "good evening"
    }
    stages {
        stage("checkout") {
            steps {
                sshagent(['git-ssh-key']) {
                    sh 'git clone git@github.com:siva-kumar-22/test-repo.git'
                }
            }
        }
        stage("build") {
            steps {
                echo "Repo cloned successfully. ${env.wish}"
            }
        }
    }
}
